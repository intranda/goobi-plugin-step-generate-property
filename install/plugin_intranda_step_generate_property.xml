<config_plugin>
    <!--
        order of configuration is:
          1.) project name and step name matches
          2.) step name matches and project is *
          3.) project name matches and step name is *
          4.) project name and step name are *
	-->
    
    <config>
        <!-- which projects to use for (can be more then one, otherwise use *) -->
        <project>*</project>
        <step>*</step>

        <!-- static text -->
        <property name="Static Text" value="Wis is static">
            <replace regex="Wis" replacement="This" />
        </property>

        <!-- variable replacement -->
        <property name="Variable" value="{meta.CatalogIDDigital}" />

        <!-- combination -->
        <property name="Combined Text" value="{meta.CatalogIDDigital}_suffix" />

        <!-- special: 'Location' of the user who created the process -->
        <property name="Archive Folder" value="{{schritte[0].bearbeitungsbenutzer.standort}}">
            <replace regex="Handschriften" replacement="01_Handschriften" />
            <replace regex="Musik" replacement="05_Musik" />
        </property>
    </config>

</config_plugin>
